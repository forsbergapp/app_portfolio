{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["."],
        "exclude": [".git",
                    ".vscode",
                    ".well_known",
                    "apps/common/public/modules",
                    "apps/common/src/jsdoc",
                    "apps/common/src/jsdoc_template",
                    "data", "dev", "node_modules"],
        "includePattern": ".+\\.js?$",
        "excludePattern": ""
    },
    "plugins": ["plugins/markdown"],
    "recurseDepth": 10,
    "sourceType": "module",
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,        
        "default": {
            "outputSourceFiles": true,
            "includeDate":false
        }
    },
    "opts": {
        "template":"./apps/common/src/jsdoc_template",
        "destination": "./apps/common/src/jsdoc",
        "encoding": "utf8",
        "private": true,
        "recurse": true
    }
}