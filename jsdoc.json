{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["."],
        "exclude": [".git",
                    ".vscode",
                    ".well_known",
                    "apps/common/public/modules",
                    "config", "data", "dev", "docs", "logs", "node_modules", "scripts"],
        "includePattern": ".+\\.js",
        "excludePattern": ""
    },
    "plugins": ["plugins/markdown"],
    "recurseDepth": 10,
    "sourceType": "module",
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "opts": {
        "destination": "./docs/jsdoc",
        "encoding": "utf8",
        "private": true,
        "recurse": true
    }
}